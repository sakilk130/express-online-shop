<%- include('../includes/head') %> 

    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation') %> 

    <main>
      <form class="product-form" action="/login" method="POST">
        <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
          <div class="form-control">
              <label for="email">E-mail</label>
              <input type="text" name="email" id="email" value="<%= oldValues.email %>" class="<%= validationErrors.find(p=>p.param==='email') ? 'invalid' : '' %>">
          </div>
          <div class="form-control">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" value="<%= oldValues.password %>" class="<%= validationErrors.find(p=>p.param==='password') ? 'invalid' : '' %>">
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken  %>" />
          <button class="btn" type="submit">Login</button>
          <div>
          <a href="/reset">Reset Password</a>
          </div>
      </form>
  </main>
    <%- include('../includes/end') %> 